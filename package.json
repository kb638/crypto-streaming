{
  "name": "project-pluto-crypto-streaming",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  
  "scripts": {
    "dev": "concurrently -c blue,magenta -n backend,frontend \"pnpm -F @pluto/backend dev\" \"pnpm -F @pluto/frontend dev\"",
    "dev:backend": "pnpm -F @pluto/backend dev",
    "dev:frontend": "pnpm -F @pluto/frontend dev",
    "build": "pnpm -r build",
    "start": "concurrently -c blue,magenta -n backend,frontend \"pnpm -F @pluto/backend start\" \"pnpm -F @pluto/frontend start\"",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "proto:gen": "buf generate packages/api",
    "proto:lint": "buf lint packages/api",
    "playwright:install": "pnpm -F @pluto/backend exec playwright install --with-deps"
  }

,
  "devDependencies": {
    "@bufbuild/buf": "^1.57.0",
    "@bufbuild/protoc-gen-es": "^2.7.0",
    "@types/node": "22.7.4",
    "concurrently": "^9.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.7.0",
    "@connectrpc/connect": "^2.1.0"
  }


}